<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Northwinder.ProductEditPage">
  <StackLayout Margin="0, 40, 0, 0">
    <Editor Text="{Binding Name}" HorizontalOptions="Center" />
    <Editor Text="{Binding Package}" HorizontalOptions="Center" />
    <Button x:Name="SaveButton" Text="Save" Clicked="OnSaveClicked" />
    <Button x:Name="CancelButton" Text="Cancel" />
  </StackLayout>
</ContentPage>